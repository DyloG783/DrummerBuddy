@* using css combo 'text-bg-warning bg-gradient' to set bg, heading, & text font color*@
<div class="container-fluid border-bottom bg-light text-black bg-gradient">

    @* Learn header section *@
    <div class="row py-5 shadow">
        <div class="col">
            @* <i class="bi bi-question-lg" style="font-size: 2.7rem; color: aqua;"></i> *@
            <h2 class="text-center display-1 text-info" >Learn</h2>
        </div>
        <div class="col my-auto px-sm-5">
            <p class="lead">@description</p>
        </div>
    </div>

    @* fundamentals and tecnique section *@
    <div class="row row-gap-5 px-sm-5 py-5">

        <section class="col-sm  shadow-sm">
            <div>
                <h2 class="pb-3 fs-1">Fundamentals</h2>
                <p class="lead pb-4 px-5">
                    This is a place to learn about the first things
                    that will help you get started on the right foot.
                </p>
                <ul class="font-monospace fs-4">
                    <li>Kit configuration</li>
                    <li>Drum sticks</li>
                    <li>Basic techniques</li>
                </ul>
            </div>
        </section>

        <section class="col-sm shadow-sm">
            <div>
                <h2 class="pb-3 fs-1">Techniques</h2>
                <p class="lead pb-4 px-5">
                    Get a grip on drumming techniques whick are
                    gauranteed to evolve your drumming skills
                    to the next level such as...
                </p>
                <ul class="font-monospace fs-4">
                    <li>Playing from the wrists</li>
                    <li>Rebounding double strokes</li>
                    <li>Singles to doubles exercise</li>
                </ul>
            </div>
        </section>

    </div>

    @* inspiration section *@
    <div class="row pb-5 ">
        <div class="col d-flex justify-content-center ">
            <section class=" ">
                <h2 class="pb-3 fs-1">Inspiration</h2>
                <p class="lead">
                    Be inspired by a showcase of some of the best drummers doing what they do best.
                </p>
                <div id="carouselExampleCaptions" class="carousel slide " data-bs-ride="carousel" style="max-width: 650px; ">

                    <div class="carousel-inner " >
                        <div class="carousel-item active ">

                            <img src="images/danny_m.png" class="d-block img-fluid" alt="Danny Carey drummer image">
                            <div class="carousel-caption ">
                                <h5>Danny Carey</h5>
                                @*  <p>Some representative placeholder content for the first slide.</p> *@
                            </div>
                        </div>
                        <div class="carousel-item ">

                            <img src="images/mg_m.png" class="d-block img-fluid" alt="Matt Garstka drummer image">
                            <div class="carousel-caption">
                                <h5>Matt Garstka</h5>
                                @* <p>Some representative placeholder content for the second slide.</p> *@
                            </div>
                        </div>
                    </div>

                    @* <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button> *@

                </div>
            </section>
        </div>
    </div>
</div>

@code {
    public string description = "This is a place to learn about the first things\nthat will help you get started on the right foot.";
}
