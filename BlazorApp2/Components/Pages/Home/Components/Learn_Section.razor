<div class="container-fluid text-black-50 bg-light  dynamic-font">

    @* Learn header section *@
    <div class="row py-5 shadow">
        <div class="col">
            @* <i class="bi bi-question-lg" style="font-size: 2.7rem; color: aqua;"></i> *@
            <h2 class="text-center display-1 page-heading-colour ">Learn</h2>
        </div>
        <div class="col my-auto px-sm-5">
            <p class="dynamic-font ">@description</p>
        </div>
    </div>

    @* fundamentals and tecnique section *@
    <section class="row shadow-sm p-sm-5 pt-5">
        <div class="col d-flex flex-column justify-content-center align-items-center">
            <h2 class="pb-3 fs-1 page-subheading-colour">Fundamentals</h2>
            <p class=" pb-4 px-5">
                This is a place to learn about the first things
                that will help you get started on the right foot.
            </p>
            @* <ul class="font-monospace dynamic-font">
                <li>Kit configuration</li>
                <li>Drum sticks</li>
                <li>Basic techniques</li>
            </ul> *@
        </div>

        <div class="col d-flex flex-column justify-content-center align-items-center ">
            @* <div class="col " style="max-width: 50rem; min-width: 20rem;"> *@
            @* <img src="images/basics.jpg" class="border rounded img-fluid" alt="drums image" > *@
            <ul class="font-fam-secondary dynamic-bullets list-unstyled">
                <li>1. Kit configuration</li>
                <li>2. Drum sticks</li>
                <li>3. Basic techniques</li>
            </ul>
        </div>
    </section>

    <section class="row shadow-sm p-sm-5 pt-5">
        <div class="col d-flex flex-column justify-content-center align-items-center p-1">
            <h2 class="pb-3 fs-1 page-subheading-colour">Techniques</h2>
            <p class=" pb-4 ">
                Get a grip on drumming techniques whick are
                gauranteed to evolve your drumming skills
                to the next level such as...
            </p>
            <ul class="font-fam-secondary dynamic-bullets pb-2 pb-sm-0 list-unstyled">
                <li>Playing from the wrists</li>
                <li>Rebounding double strokes</li>
                <li>Singles to doubles exercise</li>
            </ul>
        </div>
        <div class="col " style="max-width: 50rem; min-width: 20rem;">
            <img src="images/tech.jpg" class="border rounded img-fluid" alt="drums image">
        </div>
     </section>
    

    @* inspiration section *@
    <div class="row p-5 ">
        <section class="col d-flex flex-column align-items-center">
            <h2 class="pb-3 fs-1 page-subheading-colour">Inspiration</h2>
            <p class="">
                Be inspired by a showcase of some of the best drummers doing what they do best.
            </p>
            <div id="carouselExampleCaptions" class="carousel slide " data-bs-ride="carousel" style="max-width: 650px; ">

                <div class="carousel-inner ">
                    <div class="carousel-item active ">

                        <img src="images/danny_m.png" class="border rounded img-fluid" alt="Danny Carey drummer image">
                        <div class="carousel-caption ">
                            <h5>Danny Carey</h5>
                            @*  <p>Some representative placeholder content for the first slide.</p> *@
                        </div>
                    </div>
                    <div class="carousel-item ">

                        <img src="images/mg_m.png" class="border rounded img-fluid" alt="Matt Garstka drummer image">
                        <div class="carousel-caption">
                            <h5>Matt Garstka</h5>
                            @* <p>Some representative placeholder content for the second slide.</p> *@
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>

@code {
    public string description = "This is a place to learn about the first things\nthat will help you get started on the right foot.";
}
